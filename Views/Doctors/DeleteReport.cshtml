@model HOSPITAL2_LAB1.Model.Report

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}


<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Raport</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReportType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReportType)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReportDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReportDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReportDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReportDescription)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class="col-sm-10">
            @foreach (var patient in @ViewBag.PatientList)
            {
                if (patient.Value == @Model.Patient.ToString())
                {
                    @patient.Text
                    break;
                }
            }
        </dd>

    </dl>

    <form asp-action="DeleteReport">
        <input type="hidden" asp-for="ReportId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Reports">Back to List</a>
    </form>
</div>
