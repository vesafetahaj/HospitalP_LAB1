@{
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<style>
  

 
    /*pjesa e frontit ne dashboard*/
    .homedashboard-section {
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .homedashboard-section .imagee-patient {
            width: 40%;
        }

            .homedashboard-section .imagee-patient img {
                width: 78%;
                margin-left: -10px;
            }

        .homedashboard-section .content1 h1 {
            font-size: 40px;
            margin-left: -20px;
            color: #1ca9c9;
            text-shadow: 0.4rem 0.3rem 0px #A4DDED;
        }

        .homedashboard-section .content1 p {
            margin-top: 20px;
            font-size: 18px;
            margin-left: -20px;
            color: gray;
        }


        .homedashboard-section .content1 button {
            width: 148px;
            height: 42px;
            margin-top: 20px;
            background: none;
            border: 2px solid #1ca9c9;
            font-size: 18px;
            font-weight: 500;
            box-shadow: 0px 0 5px 1px #b3aeae;
        }

            .homedashboard-section .content1 button:hover {
                width: 155px;
                background: #A4DDED;
                color: #fff;
                cursor: pointer;
            }

    .Ourhospital {
        font-size: 35px;
        color: #1ca9c9;
        font-style: italic;
        height: 81px;
        margin-top: 80px;
        margin-left: -50px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .Ourhospital:hover {
            transform: scale(1.2);
            cursor: pointer;
            color: #0E3386;
        }



    .gallery {
        background-color: transparent;
        margin: top 50px;
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        margin: 15px 0;
        transition: transform .2s;
    }

        .gallery img {
            flex-wrap: wrap;
            width: 320px;
            height: 300px;
            margin: 10px 0;
            margin-left: -36px;
            border-radius: 10px;
        }

            .gallery img:hover {
                transform: scale(1.2);
            }


    /*about us*/
    .heading {
        width: 90%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        text-align: center;
        margin: 20px auto;
    }

        .heading h1 {
            font-size: 50px;
            color: #1ca9c9;
            margin-bottom: 25px;
            position: relative;
        }

            .heading h1::after {
                content: "";
                position: absolute;
                width: 100%;
                height: 4px;
                display: block;
                margin: 0 auto;
                background-color: #1ca9c9;
            }

        .heading p {
            font-size: 18px;
            color: #666;
            margin-bottom: 35px;
        }

    .coontainer {
        width: 90%;
        margin: 0 auto;
        padding: 10px 20px;
    }

    .about {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
    }

    .about-image-patient {
        flex: 1;
        margin-right: 40px;
        overflow: hidden;
    }

        .about-image-patient img {
            max-width: 100%;
            height: auto;
            display: block;
            transition: 0.5s ease;
        }

        .about-image-patient:hover img {
            transform: scale(1.2);
        }

    .about-coontent {
        flex: 1;
    }

        .about-coontent h2 {
            font-size: 23px;
            margin-bottom: 15px;
            color: #1877F2;
        }

        .about-coontent p {
            font-size: 18px;
            line-height: 1.5;
            color: #666;
        }

  

    .about-coontent button {
        width: 148px;
        height: 42px;
        margin-top: 20px;
        background: none;
        border: 2px solid #1ca9c9;
        font-size: 18px;
        font-weight: 500;
        box-shadow: 0px 0 5px 1px #b3aeae;
    }

        .about-coontent button:hover {
            width: 155px;
            background: #A4DDED;
            color: #fff;
            cursor: pointer;
        }

    /*special services*/

    .services {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        padding: 30px 20px;
        grid-column-gap: 20px;
        grid-row-gap: 30px;
        margin-top: 80px;
        background: White;
        margin-bottom: 5px;
    }

    .items {
        text-align: center;
        padding: 3rem 2rem;
        background: #fff;
        grid-template-rows: auto 1fr;
        position: relative;
        outline: .1rem solid cornflowerblue;
        outline-offset: -1.5rem;
        cursor: pointer;
    }

        .items:hover {
            outline: .2rem solid #0CAFFF;
            outline-offset: 0;
        }

        .items img {
            width: 80%;
            height: 200px;
            object-fit: cover;
            cursor: pointer;
            transition: 0.2s ease;
            position: relative;
        }

            .items img:hover {
                transform: scale(1.1);
            }

        .items h4 {
            padding: .5rem 0;
            text-align: center;
            font-size: 1.5rem;
            color: #0CAFFF;
        }

    .items {
        font-size: 1.3rem;
        color: #444;
        margin-top: -50px;
    }

        .items button {
            padding: 3px 18px;
            border: none;
            outline: none;
            color: white;
            background-color: #0CAFFF;
            cursor: pointer;
            border-radius: 4px;
            font-size: 18px;
            margin: 0 auto;
            transition: 0.2s all;
         
        }

            .items button a {
                color: beige;

            }

            .items button:hover {
                transform: scale(1.08);
            }



    .Specialservices h1 {
        font-size: 47px;
        font-family: 'Lucida Calligraphy';
        letter-spacing: 3.5px;
        text-align: center;
        margin-top: 100px;
        color: cornflowerblue;
    }

</style>


<div class="homedashboard-section">
    <div class="imagee-patient">
        <img src="~/images/dashboardpatient2.jpg" />
    </div>

    <div class="content1">
        <h1>Welcome to your dashboard dear Patient! </h1>
