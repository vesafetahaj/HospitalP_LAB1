@model HOSPITAL2_LAB1.Model.Reservation

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}
<style>
    .form-group label{
        margin-bottom:6px;
        margin-top:20px;
        color: #0071c5;
        font-size:15px;
        font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    }
  
 
    hr{
        color: #0071c5;;
    }



    .termin h2{
        text-align: center;
        color: #7CB9E8;
    }

    .termin p{
        text-align: center;
        font-size: 16px;
        color:cornflowerblue;
    }


    .custom-btn {
        background-color: #3498db; 
        color: #fff; 
        padding: 10px 20px; 
        border: none; 
        border-radius: 15px;
        margin-top:17px;
        font-size: 12px; 
        cursor: pointer; 
        transition: background-color 0.3s, color 0.3s; 
    }

        .custom-btn:hover {
            background-color: #2980b9; 
            color: #fff; 
        }

    .bordered-form {
        border: 1px solid #ccc; 
        padding: 20px; 
        border-radius: 10px;
        box-shadow: 0 0 10px #6CB4EE;
    }

     .imagee-patient {
         margin-top:20px;
        width: 40%;
    }

        .imagee-patient img {
            width: 78%;
            margin-left:880px;
        }


   .row{
       margin-top:-370px;
       margin-left:75px;
   }

    .back-link {
        text-decoration: none; 
        color: #3498db;
        border-radius: 5px; 
        transition: background-color 0.3s, color 0.3s; 
        margin-left:250px;
        font-weight:bold;
    }

        .back-link:hover {
            cursor:pointer;
            color: #007791;
        }
      


</style>



<h1>SunriseCare Hospital</h1>
<div class="termin">
<h2>Book an appointment!</h2>
<p>"Your Health, Our Priority – Book Today."</p>
</div>


<hr />

<div class="imagee-patient">
    <img src="~/images/termini.png" />
</div>
<div class="row">
    <div class="col-md-4">
     
        <form asp-action="CreateAppointment" class="bordered-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ReservationDate" class="control-label"></label>
                <input asp-for="ReservationDate" class="form-control" type="date" />
                <span asp-validation-for="ReservationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReservationTime" class="control-label"></label>
                <input asp-for="ReservationTime" class="form-control" />
                <span asp-validation-for="ReservationTime" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <label asp-for="Doctor" class="control-label"></label>
                <select asp-for="Doctor" class="form-control" asp-items="@ViewBag.DoctorList">
                    <option value="" disabled selected>Select a doctor</option>
                </select>
                <span asp-validation-for="Doctor" class="text-danger"></span>
            </div>

        


            <div class="form-group">
                <input type="submit" value="Create" class="custom-btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Appointments" class="back-link">Back to List</a>
</div>

