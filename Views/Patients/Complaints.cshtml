@model List<HOSPITAL2_LAB1.Model.Complaint>
@{
    ViewData["Title"] = "Complaints";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}
<style>
    .table-blue {
        background-color: #eaf4fd;
    }

    .thead-dark {
        background-color: #343a40;
        color: #fff;
    }
</style>
<h1>Complaints</h1>
<hr />


<table class="table table-bordered table-striped table-hover table-blue">
    <thead class="thead-dark">
        <tr>

            <th>ComplaintDate</th>
            <th>ComplaintDetails</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var complaint in Model)
        {
            <tr>
                <td>@complaint.ComplaintDate?.ToString("yyyy-MM-dd")</td>
                <td>@complaint.ComplaintDetails</td>

                <td>
                    <a href="@Url.Action("EditComplaint", "Patients", new { id = complaint.ComplaintId })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("DeleteComplaint", "Patients", new { id = complaint.ComplaintId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>