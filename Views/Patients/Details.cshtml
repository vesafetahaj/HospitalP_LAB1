        <dt class="col-sm-2 my-custom-dt">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10 my-custom-dd ">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2 my-custom-dt">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class="col-sm-10 my-custom-dd">
