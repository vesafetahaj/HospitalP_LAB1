@model HOSPITAL2_LAB1.Model.Patient

@{
    ViewData["Title"] = "Personal info";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}
<style>
  
    .my-custom-dt {
        color: #007FFF;
        font-weight: bold;
       
      
    }

    .my-custom-dd {
        color: #012169;
        
    }
    .detail hr{
        color: #007FFF;
        
     }

    .my-custom-link {
        color: cornflowerblue;
        text-decoration:none;
        margin-top:50px;
        font-size:15px;
  
    }

    .detaje{
        background-color: #B0E0E6;
        margin-right:600px; 
        display:flex;
        align-items:center;
        justify-content:center;
        border-radius: 600px;

    }

    .row{
       
        margin-left:100px;
    }

    .detaje:hover{
        background-color: #AFEEEE;
    }
