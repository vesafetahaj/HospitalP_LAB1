@using System.Security.Claims
@using Newtonsoft.Json

@{
    ViewData["Title"] = "Patient Dashboard";
    Layout = null;
    bool patientIdExists = ViewBag.PatientId != null && ViewBag.PatientId != 0;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - SunRiseCare Hospital</title>
    <link rel="icon" href="~/images/logo-color.png" type="image/x-icon">

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hospital_System_Management.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Anek+Gurmukhi&family=Roboto+Condensed:wght@300&display=swap" rel="stylesheet">
    <style>
        #mySidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #9abddc;
            overflow-x: hidden;
            padding-top: 60px;
            transition: 0.5s;
        }

            #mySidenav a {
                padding: 28px 8px 8px 32px;
                text-decoration: none;
                font-size: 25px;
                color: #fff;
                display: block;
                transition: 0.3s;
                font-family: 'Roboto Condensed', sans-serif;
                font-weight: bold;
            }

            #mySidenav img {
                width: 32px;
                padding-right: 10px;
            }

            #mySidenav a:hover {
                color: #e5f3fd;
            }

            #mySidenav .closebtn {
                position: absolute;
                top: 0;
                right: 25px;
                font-size: 36px;
                margin-left: 50px;
            }

        #main {
            transition: margin-left .5s;
            padding-left: 50px;
            margin-top: -15px;
        }

            #main > h1 {
                font-family: 'Anek Gurmukhi', sans-serif;
                color: #aecce4;
                display: inline;
                margin-left: 60px;
            }

        #menu {
            width: 30px;
            cursor: pointer;
            margin-left: 30px;
            margin-top: 10px;
        }

        #logo {
            transition: transform 0.3s ease;
            width: 180px;
        }

    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a asp-controller="Home" asp-action="Index"><img src="~/images/sunrisecare-hospital-low-resolution-logo-color-on-transparent-background.png" alt="" id="logo"></a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

    </header>
    <div id="mySidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

        <a asp-area="" asp-controller="Patients" asp-action="Index"><img src="~/images/home.png" id="home">Home</a>
        
        <a asp-area="" asp-controller="Patients" asp-action="Details"><img src="~/images/information.png">Personal info</a>
       
          
        <a asp-area="" asp-controller="Patients" asp-action="Raporti"><img src="~/images/health-report.png">My Raports</a>
        <a asp-area="" asp-controller="Patients" asp-action="CreateAppointment"><img src="~/images/health-checkup.png">Make Appointment</a>
        <a asp-area="" asp-controller="Patients" asp-action="Appointments"><img src="~/images/appointment.png">Your Appointments</a>
        <a asp-area="" asp-controller="Patients" asp-action="CreateMessage"><img src="~/images/contact-mail.png">Contact Us</a>
        <a asp-area="" asp-controller="Patients" asp-action="ContactForms"><img src="~/images/contact-mail.png">View your message here</a>
        <a asp-area="" asp-controller="Patients" asp-action="CreateComplaint"><img src="~/images/sad-face.png">Make Complaints</a>
        <a asp-area="" asp-controller="Patients" asp-action="Complaints"><img src="~/images/bad-review.png">Your Complaints</a>

    </div>
    <span onclick="openNav()"><img src="~/images/menublue.png" alt="" srcset="" id="menu"></span>
    <div id="main">
        @RenderBody()
    </div>
    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
            document.getElementById("logo").style.transform = "translateX(250px)";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
            document.getElementById("logo").style.transform = "translateX(0)";
        }
    </script>


    @RenderSection("Scripts", required: false)
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>

