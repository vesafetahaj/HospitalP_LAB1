@model HOSPITAL2_LAB1.Model.Room

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_ReceptionistLayout.cshtml";
}


<div id="main"> 
    <div class="container">
        <div class="row" >
            <h1>Edit Room</h1>
            <div class="col-md-6">
                <form asp-action="EditRoom">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="RoomId" />
                    <div class="form-group">
                        <label asp-for="RoomNumber">Room number</label>
                        <input asp-for="RoomNumber" type="text" class="form-control" id="RoomNumber" name="RoomNumber" />
                        <span asp-validation-for="RoomNumber" ></span>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>