@model HOSPITAL2_LAB1.Model.Payment

@{
    ViewData["Title"] = "Create Payment";
    Layout = "~/Views/Shared/_ReceptionistLayout.cshtml";
}

<br />
<h2>Create Payment</h2>

<div class="row">
<form asp-action="CreatePayment" method="post">
    <div class="form-group">
        <label for="PaymentAmount">Payment Amount:</label>
        <input type="text" class="form-control" id="PaymentAmount" name="PaymentAmount" asp-for="PaymentAmount">
    </div>
    <div class="form-group">
        <label for="PaymentDate">Payment Date:</label>
        <input type="date" class="form-control" id="PaymentDate" name="PaymentDate" asp-for="PaymentDate">
    </div>
        <div class="form-group">
            <label asp-for="Patient" class="control-label"></label>
            @Html.DropDownList("Email", ViewData["Emails"] as SelectList, "Select a patient", new { @class = "form-control" })
            <span asp-validation-for="Patient" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Report" class="control-label"></label>
            @Html.DropDownList("ReportType", ViewData["ReportType"] as SelectList, "Select a report", new { @class = "form-control" })
            <span asp-validation-for="Report" class="text-danger"></span>
        </div>
        <br />
   
    <button type="submit" class="btn btn-primary">Create</button>
</form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
    </div>
