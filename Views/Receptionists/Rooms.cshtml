@model List<HOSPITAL2_LAB1.Model.Room>

@{
    ViewData["Title"] = "Rooms";
    Layout = "~/Views/Shared/_ReceptionistLayout.cshtml";
}
<style>
    .card {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .card-image {
        flex: 1 0 auto;
        overflow: hidden;
    }

        .card-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
</style>

<div id="main">
    <h1>Rooms</h1>
    <div style="display:flex; justify-content:end; margin-top: -40px">
        <a href="@Url.Action("CreateRoom", "Receptionists")" class="btn btn-outline-primary">Create a new room</a>
    </div>
   
    <div class="row mt-4">
        @if (Model.Count > 0)
        {
            @foreach (var room in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@room.RoomNumber</h5>
                            <div class="text-center">
                                <a href="@Url.Action("EditRoom", "Receptionists", new { id = room.RoomId })" class="btn btn-primary">Edit</a>
                                <a href="@Url.Action("DeleteRoom", "Receptionists", new { id = room.RoomId })" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No rooms found!</p>
        }
    </div>
</div>
