@model List<HOSPITAL2_LAB1.Model.Patient>
@{
    ViewData["Title"] = "Patients";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .patients-container {
        padding: 20px;
    }

    .patient-card {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 20px;
        margin: 20px;
        background-color: #fff;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

        .patient-card h4 {
            color: #333;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .patient-card p {
            color: #666;
            margin: 5px 0;
        }

    .search-bar {
        margin-bottom: 20px;
    }

    .search-input {
        width: 70%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .sorting-buttons-container {
        text-align: center;
        margin-bottom: 10px;
    }

    .sorting-buttons a {
        margin-right: 10px;
    }
</style>

<h1>Patients</h1>
<hr />

<div class="row mt-4">
    <form method="get" action="@Url.Action("SearchPatients", "Administrators")" class="search-bar">
        <div class="input-group">
            <input type="text" name="query" class="form-control search-input" placeholder="Search by name and surname" aria-label="Search" aria-describedby="search-button">
            <button class="btn btn-primary search-button" type="submit" id="search-button">Search</button>
        </div>
    </form>
</div>

<div class="sorting-buttons-container">
    <div class="sorting-buttons">
        <a asp-action="Patients" asp-route-sortOrder="name_desc" class="btn btn-primary">Sort by Name Z -> A</a>
        <a asp-action="Patients" asp-route-sortOrder="name_asc" class="btn btn-primary">Sort by Name A -> Z</a>
        <a asp-action="Patients" asp-route-sortOrder="Date" class="btn btn-primary">Sort by the Oldest</a>
        <a asp-action="Patients" asp-route-sortOrder="date_desc" class="btn btn-primary">Sort by the Youngest</a>
        <a asp-action="Patients" class="btn btn-secondary">Unsorted</a>
    </div>
</div>

<div class="container patients-container">
    <div class="row">
        @foreach (var patient in Model)
        {
            <div class="col-md-4">
                <div class="patient-card">
                    <h4>@patient.Name @patient.Surname</h4>
                    <p><strong>Gender:</strong> @patient.Gender</p>
                    <p><strong>Birthday:</strong> <span class="birthday">@patient.Birthday?.ToString("yyyy-MM-dd")</span></p>
                    <p><strong>Email:</strong> @patient.Email</p>
                    <p><strong>Phone:</strong> @patient.Phone</p>
                </div>
            </div>
        }
    </div>
</div>
