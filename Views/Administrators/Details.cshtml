@model HOSPITAL2_LAB1.Model.Administrator

@{
    ViewData["Title"] = "Personal Info";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Custom CSS for added color, font, and hover effects */
    .personal-card {
        background-color: #f7f7f7;
        border: 2px solid #3498db;
        padding: 20px;
        font-family: 'Arial', sans-serif; /* Change the font-family here */
        transition: background-color 0.3s ease;
    }

    .personal-card-title {
        color: #3498db;
        font-family: 'Arial', sans-serif; /* Change the font-family here */
    }

    .personal-card-button {
        background-color: #3498db;
        color: #fff;
        font-family: 'Arial', sans-serif; /* Change the font-family here */
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .personal-card-button:hover {
            background-color: #2670b8; /* New background color on hover */
            color: #fff; /* Text color on hover */
        }

    .personal-card:hover {
        background-color: #e1e1e1; /* New background color on hover */
    }
</style>

<div class="container mt-4">
    <div class="card personal-card">
        <div class="card-body">
            <h4 class="card-title personal-card-title">Personal Info</h4>
            <hr />

            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                        <dt class="col-sm-4">Surname:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Surname)</dd>
                    </dl>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-action="EditPersonalInfo" class="btn btn-primary personal-card-button">Edit Personal Info</a>
                <a asp-action="Index" class="btn btn-secondary ml-2">Back to Home</a>
            </div>
        </div>
    </div>
</div>
