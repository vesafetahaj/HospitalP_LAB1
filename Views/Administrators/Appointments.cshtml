@model List<HOSPITAL2_LAB1.Model.Reservation>
@{
    ViewData["Title"] = "Appointments";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .thead-dark {
        background-color: #fbaed2;
        color: #fff;
    }

    .btn-pink-outline {
        background-color: transparent;
        border-color: #fbaed2;
        color: #fbaed2;
    }

    .btn-pink-fill {
        background-color: #fbaed2;
        border-color: #fbaed2;
        color: white;
    }
    .btn-pink-fill:hover{
            background-color: white;
            border-color: white;
            color: #fbaed2;
    }

    .btn-pink-outline:hover {
        background-color: #fbaed2;
        border-color: #fbaed2;
        color: white;
    }
</style>

<script>
    function toggleOldestDate() {
        var oldestButton = document.getElementById('oldestButton');
        var oldestDate = document.getElementById('oldestDate');

        if (!oldestButton.classList.contains('btn-pink-fill')) {
            oldestButton.classList.remove('btn-pink-outline');
            oldestButton.classList.add('btn-pink-fill');
            oldestDate.style.display = 'inline';
        } else {
            oldestButton.classList.remove('btn-pink-fill');
            oldestButton.classList.add('btn-pink-outline');
            oldestDate.style.display = 'none';
        }
    }

    function toggleEarliestDate() {
        var earliestButton = document.getElementById('earliestButton');
        var earliestDate = document.getElementById('earliestDate');

        if (!earliestButton.classList.contains('btn-pink-fill')) {
            earliestButton.classList.remove('btn-pink-outline');
            earliestButton.classList.add('btn-pink-fill');
            earliestDate.style.display = 'inline';
        } else {
            earliestButton.classList.remove('btn-pink-fill');
            earliestButton.classList.add('btn-pink-outline');
            earliestDate.style.display = 'none';
        }
    }
</script>
<h1>Appointments</h1>
<div class="mt-3">
    <p>
        <button type="button" class="btn btn-pink-outline" id="oldestButton" onclick="toggleOldestDate()">Oldest Appointment</button>
        <span id="oldestDate" style="display:none;">Date: @ViewBag.OldestAppointment.ReservationDate?.ToString("yyyy-MM-dd"), Time: @ViewBag.OldestAppointment.ReservationTime</span>
    </p>
    <p>
        <button type="button" class="btn btn-pink-outline" id="earliestButton" onclick="toggleEarliestDate()">Earliest Appointment</button>
        <span id="earliestDate" style="display:none;">Date: @ViewBag.EarliestAppointment.ReservationDate?.ToString("yyyy-MM-dd"), Time: @ViewBag.EarliestAppointment.ReservationTime</span>
    </p>
</div>

<form method="get" class="form-inline">
    <div class="form-group mr-3">
        <label class="mr-2" for="filterDoctor">Filter by Doctor:</label>
        <select class="form-control" name="filterDoctor">
            <option value="">All Doctors</option>
            @foreach (var doctor in ViewBag.Doctors)
            {
                <option value="@doctor.DoctorId">@doctor.Name @doctor.Surname</option>
            }
        </select>
    </div>

    <div class="form-group mr-3">
        <label class="mr-2" for="filterPatient">Filter by Patient:</label>
        <select class="form-control" name="filterPatient">
            <option value="">All Patients</option>
            @foreach (var patient in ViewBag.Patients)
            {
                <option value="@patient.PatientId">@patient.Name @patient.Surname</option>
            }
        </select>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Apply Filters</button>
</form>

<hr />

<table class="table table-bordered table-striped table-hover table-pink">
    <thead class="thead-dark">
        <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Patient</th>
            <th>Doctor</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.ReservationDate?.ToString("yyyy-MM-dd")</td>
                <td>@appointment.ReservationTime</td>
                <td>@appointment.PatientNavigation.Name @appointment.PatientNavigation.Surname</td>
                <td>@appointment.DoctorNavigation.Name @appointment.DoctorNavigation.Surname</td>
            </tr>
        }
    </tbody>
</table>
