@model List<HOSPITAL2_LAB1.Model.Doctor>

@{
    ViewData["Title"] = "Doctors";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .card {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .card-image {
        flex: 1 0 auto;
        overflow: hidden;
    }

        .card-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
</style>

<div id="main">
    <h1>Doctors</h1>
    <div style="display:flex; justify-content:end; margin-top: -40px">
        <a href="@Url.Action("CreateDoctor", "Administrators")" class="btn btn-outline-primary">Create New Doctor</a>
    </div>
    <div class="row mt-4">
        <form method="get" action="@Url.Action("SearchDoctors", "Administrators")">
            <div class="input-group mb-3">
                <input type="text" name="query" class="form-control" placeholder="Search by name or surname" aria-label="Search" aria-describedby="search-button">
                <button class="btn btn-primary" type="submit" id="search-button">Search</button>
            </div>
        </form>
    </div>
    <div class="row mt-4">
        @if (Model.Count > 0)
        {
            @foreach (var doctor in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="@Url.Content(doctor.PhotoUrl)" class="card-img-top" alt="Doctor Image">
                        <div class="card-body">
                            <h5 class="card-title">@doctor.Name</h5>
                            <h5 class="card-title">@doctor.Surname</h5>
                            <p class="card-text">Education: @doctor.Education</p>
                            <p class="card-text">Specialization:
                                @foreach (var specialization in ViewBag.Name)
                                {
                                    if (specialization.Value == doctor.Specialization.ToString())
                                    {
                                        @specialization.Text
                                        break;
                                    }
                                }
                            </p>                            
                            <p class="card-text">Email: @doctor.Email</p>
                            <div class="text-center">
                                <a href="@Url.Action("EditDoctor", "Administrators", new { id = doctor.DoctorId })" class="btn btn-primary">Edit</a>
                                <a href="@Url.Action("DeleteDoctor", "Administrators", new { id = doctor.DoctorId })" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No doctors found.</p>
        }
    </div>
</div>
