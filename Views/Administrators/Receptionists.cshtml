@model IEnumerable<HOSPITAL2_LAB1.Model.Receptionist>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Receptionists</h1>
<hr/>
<p>
    <a asp-action="CreateReceptionist" style="margin-left:10px">Register New Receptionist</a>
</p>
<table class="table table-hover table-bordered table-striped">
    <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
               
                <td>
                    <a asp-action="EditReceptionist" asp-route-id="@item.ReceptionistId">Edit</a> |
                    <a asp-action="DeleteReceptionist" asp-route-id="@item.ReceptionistId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
